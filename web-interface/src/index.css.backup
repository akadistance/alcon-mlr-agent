/* Tailwind CSS base styles */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Using system fonts as per OpenAI Apps SDK guidelines */

/* Respect system dark mode preference - OpenAI Apps SDK Components */
:root {
  color-scheme: light dark;
  
  /* Enterprise Color System - Light Mode */
  --surface-primary: #FFFFFF;
  --surface-secondary: #F8F7F5;
  --surface-tertiary: #F0EDE8;
  --text-primary: #1A1A1A;
  --text-secondary: #6B6B6B;
  --text-tertiary: #999999;
  --border-subtle: #E8E5E0;
  --accent-primary: #0066CC;
  --accent-success: #0A8754;
  --accent-warning: #D97706;
  --accent-danger: #DC2626;
  
  /* Official Alcon Brand Colors (legacy) */
  --alcon-primary: #003595;
  --alcon-primary-hover: #002a7a;
  --alcon-primary-light: #1a4ba3;
  --alcon-cyan: #00AEEF;
  --alcon-dark-teal: #007483;
  --alcon-purple: #4E0F78;
  --alcon-green: #00AE44;
  --alcon-orange: #FF6B12;
  --alcon-red: #9B1A2F;
  --alcon-secondary: #0079c1;
  --alcon-accent: #00a0af;
  --alcon-success: #49a942;
  
  /* Premium Whites and Grays */
  --pure-white: #ffffff;
  --pearl-white: #fefefe;
  --cloud-white: #f8fafb;
  --silver-mist: #f1f4f7;
  --steel-gray: #e2e8f0;
  --slate-gray: #cbd5e1;
  
  /* Text Colors */
  --text-primary: #1e293b;
  --text-secondary: #475569;
  --text-tertiary: #64748b;
  --text-quaternary: #94a3b8;
  --text-inverse: #ffffff;
  
  /* Claude-style Surface Colors */
  --background: #ffffff;
  --background-alt: #f9f9f9;
  --surface: #ffffff;
  --surface-elevated: #ffffff;
  --surface-hover: #f5f5f5;
  --surface-pressed: #eeeeee;
  --surface-primary: #ffffff;
  
  /* Claude-style Border Colors */
  --border: #e0e0e0;
  --border-light: #e5e5e5;
  --border-medium: #d0d0d0;
  --border-focus: var(--alcon-primary);
  
  /* Premium Shadows */
  --shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  --shadow-inner: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);
  
  /* Premium Gradients */
  --gradient-primary: linear-gradient(135deg, var(--alcon-primary) 0%, var(--alcon-secondary) 100%);
  --gradient-surface: linear-gradient(145deg, var(--pure-white) 0%, var(--pearl-white) 100%);
  --gradient-glass: linear-gradient(145deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%);
  
  /* Border Radius */
  --radius-xs: 4px;
  --radius-sm: 6px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  --radius-2xl: 20px;
  --radius-3xl: 24px;
  --radius-full: 9999px;
  
  /* Legacy support */
  --primary: var(--alcon-primary);
  --primary-hover: var(--alcon-primary-hover);
  --primary-blue: var(--alcon-primary);
  --text: var(--text-primary);
  --secondary-bg: var(--background-alt);
  --accent: var(--alcon-primary);
  --card-bg: var(--surface);
  --hover-bg: var(--surface-hover);
  
  /* ChatGPT-inspired animation timing functions */
  --spring-common: cubic-bezier(0.37, 0.55, 0.86, 0.88);
  --spring-fast: cubic-bezier(0.4, 0, 0.2, 1);
  --spring-slow: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  
  /* Enhanced spacing system */
  --spacing: 0.25rem;
  
  /* Better animation durations */
  --duration-fast: 0.15s;
  --duration-normal: 0.25s;
  --duration-slow: 0.4s;
  --duration-slower: 0.7s;
}

.dark {
  /* Claude-style Dark Theme Colors */
  --alcon-primary: #4a90e2;
  --alcon-primary-hover: #357abd;
  --alcon-primary-light: #6ba3ea;
  --alcon-secondary: #00a0df;
  --alcon-accent: #00c4d4;
  --alcon-success: #5cb85c;
  
  /* Claude-style Dark Surfaces */
  --background: #212121;
  --background-alt: #2a2a2a;
  --surface: #2a2a2a;
  --surface-elevated: #2a2a2a;
  --surface-hover: #333333;
  --surface-pressed: #3a3a3a;
  --surface-primary: #2a2a2a;
  
  /* Claude-style Dark Borders */
  --border: #404040;
  --border-light: #3a3a3a;
  --border-medium: #505050;
  
  /* Claude-style Dark Text Colors */
  --text-primary: #ececec;
  --text-secondary: #b4b4b4;
  --text-tertiary: #8e8e8e;
  --text-quaternary: #707070;
  --text-inverse: #212121;
  
  /* Dark Premium Shadows */
  --shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.3);
  --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.4), 0 1px 2px -1px rgb(0 0 0 / 0.4);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.4);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.4), 0 4px 6px -4px rgb(0 0 0 / 0.4);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.5), 0 8px 10px -6px rgb(0 0 0 / 0.5);
  --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.6);
  --shadow-inner: inset 0 2px 4px 0 rgb(0 0 0 / 0.3);
  
  /* Dark Premium Gradients */
  --gradient-primary: linear-gradient(135deg, var(--alcon-primary) 0%, var(--alcon-secondary) 100%);
  --gradient-surface: linear-gradient(145deg, var(--pearl-white) 0%, var(--cloud-white) 100%);
  --gradient-glass: linear-gradient(145deg, rgba(15, 17, 19, 0.9) 0%, rgba(15, 17, 19, 0.7) 100%);
  
  /* Legacy support */
  --primary: var(--alcon-primary);
  --primary-hover: var(--alcon-primary-hover);
  --primary-blue: var(--alcon-primary);
  --text: var(--text-primary);
  --secondary-bg: var(--background-alt);
  --accent: var(--alcon-primary);
  --card-bg: var(--surface);
  --hover-bg: var(--surface-hover);
}

body {
  background: var(--background);
  color: var(--text-primary);
  /* System font stack - OpenAI Apps SDK guidelines */
  font-family: 'Open Sans', Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  line-height: 1.5;
  font-weight: 400;
  overflow-x: hidden;
  transition: background-color 0.3s ease, color 0.3s ease;
  min-height: 100vh;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Ensure proper scaling at all zoom levels */
html {
  font-size: 16px; /* Base font size */
}

/* Responsive font scaling */
@media screen and (max-width: 768px) {
  html {
    font-size: 14px;
  }
}

@media screen and (max-width: 480px) {
  html {
    font-size: 13px;
  }
}

/* High DPI support */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  html {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Zoom level adjustments */
@media screen and (min-width: 1200px) {
  html {
    font-size: 17px;
  }
}

@media screen and (min-width: 1600px) {
  html {
    font-size: 18px;
  }
}

code {
  font-family: 'Fira Code', 'Monaco', 'Cascadia Code', 'Roboto Mono', monospace;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: var(--secondary-bg);
}

::-webkit-scrollbar-thumb {
  background: var(--border);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent);
}

/* Global input field reset and styling */
input, textarea, select, button {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  box-sizing: border-box;
  font-family: inherit;
}

input, textarea, select {
  color: var(--text-primary);
  background: transparent;
  vertical-align: middle;
  text-align: left;
}

input::placeholder, textarea::placeholder {
  color: var(--text-tertiary);
  text-align: left;
  vertical-align: middle;
}

/* Alcon Logo in Bottom Right */
.alcon-logo-watermark {
  position: fixed;
  bottom: -20px; /* Much closer to the bottom edge */
  right: 20px;
  width: 120px;
  height: auto;
  opacity: 1; /* Full opacity - 100% visible */
  z-index: 1;
  transition: opacity 0.3s ease;
  pointer-events: none;
  filter: none; /* Remove grayscale to preserve blue color */
}

.alcon-logo-watermark:hover {
  opacity: 1; /* Keep at full opacity on hover */
}

/* Responsive logo sizing */
@media (max-width: 768px) {
  .alcon-logo-watermark {
    width: 80px;
    bottom: 2px; /* Much closer to bottom on tablets */
    right: 15px;
    opacity: 1; /* Full opacity on mobile too */
  }
}

@media (max-width: 480px) {
  .alcon-logo-watermark {
    width: 60px;
    bottom: 2px; /* Much closer to bottom on mobile */
    right: 10px;
    opacity: 1; /* Full opacity on mobile too */
  }
}

/* Selection styling */
::selection {
  background-color: var(--primary-blue);
  color: white;
}

/* Remove default focus rings; we use subtle shadows instead */
textarea:focus, button:focus, input:focus {
  outline: none;
}

/* Ensure no default focus ring on the input container */
.input-shell:focus, .input-shell:focus-within {
  outline: none !important;
  box-shadow: var(--shadow-sm), 0 0 0 0 rgba(59,130,246,0); /* suppress UA ring */
}

/* Force-remove UA focus ring on textareas (Chromium/Edge/Firefox/WebKit) */
.input-shell textarea,
.input-shell textarea:focus,
.input-shell textarea:focus-visible {
  outline: none !important;
  outline-offset: 0 !important;
  box-shadow: none !important;
}

/* Also suppress on any focusable inside the input shell */
.input-shell :focus,
.input-shell :focus-visible {
  outline: none !important;
  outline-offset: 0 !important;
}
